doctype html
html(ng-app)
    head
        title #{x('app-name')}
        meta(name="theme-color" content="#ee6e73")
        link(rel="icon", type="favicon", href="/assets/favicon.ico")
        block css
            link(rel='stylesheet', href='/css/materialize.min.css', type="text/css", media="screen")
            link(rel='stylesheet', href='/css/style.scss', type="text/css", media="screen")
        block scripts
            script(type="text/javascript", src="https://cdn.firebase.com/js/client/2.1.1/firebase.js")
            script(type="text/javascript", src="/js/bower_components/jquery/dist/jquery.min.js")
            script(type='text/javascript', src="https://cdnjs.cloudflare.com/ajax/libs/require.js/2.1.15/require.js")
            script(type="text/javascript", src="/js/bower_components/angular/angular.min.js")
            script(type="text/javascript", src="/js/materialize.min.js")
    body
        nav
            div(class="nav-wrapper light-blue")
                a(href="#" class="brand-logo") BlocItOff
                ul(id="nav-mobile" class="right side-nav")
                    li(class="active")
                        a(href="#") In-Progress
                    li
                        a(href="#") Ending Soon
                    li
                        a(href="#") Expired
        block messages
        block content
    block userScripts
        script(type="text/javascript", src="/js/base.js")